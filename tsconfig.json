{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "es6",
    "outDir": "./dist",
    "target": "es5",
    "noImplicitAny": true,
    "strict": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.iterable"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
