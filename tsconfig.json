{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "noImplicitAny": true,
    "strict": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017"],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
